{
  "name": "frontend",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "description": "A desktop application.",
  "author": "Chin Siang Hao",
  "scripts": {
    "dev": "vite",
    "prod": "bun --env-file=.env.production vite --mode production --host",
    "build:dev": "bun --env-file=.env.development --bun vite build --mode dev",
    "build:prod": "bun --env-file=.env.production --bun vite build --mode prod",
    "lint": "eslint .",
    "preview": "vite preview",
    "electron": "electron electron.js",
    "pack:win": "electron-builder --win",
    "pack:linux": "electron-builder --linux"
  },
  "dependencies": {
    "hono": "4.10.0",
    "react": "^19.1.1",
    "react-dom": "^19.1.1"
  },
  "devDependencies": {
    "electron-builder": "^26.0.12",
    "electron": "^37.2.6",
    "@eslint/js": "^9.36.0",
    "@types/node": "^24.6.0",
    "@types/react": "^19.1.16",
    "@types/react-dom": "^19.1.9",
    "@vitejs/plugin-react": "^5.0.4",
    "babel-plugin-react-compiler": "^19.1.0-rc.3",
    "eslint": "^9.36.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.22",
    "globals": "^16.4.0",
    "typescript": "~5.9.3",
    "typescript-eslint": "^8.45.0",
    "vite": "^7.1.7"
  },
  "main": "electron.js",
  "build": {
    "appId": "com.electron-hono-vite-react-template.app",
    "productName": "electron-hono-vite-react-template",
    "directories": {
      "output": "release"
    },
    "win": {
      "target": "portable"
    },
    "files": [
      "dist/**/*",
      "electron.js"
    ]
  }
}